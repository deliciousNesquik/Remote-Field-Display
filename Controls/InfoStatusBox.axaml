<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:RFD.Controls">

	<Design.PreviewWith>
		<controls:InfoStatusBox/>
	</Design.PreviewWith>

	<Style Selector="controls|InfoStatusBox">
		<Setter Property="Foreground" Value="White"/>
		<Setter Property="Template">
			<!--#00b300-->
			<ControlTemplate>
				<Border Background="#ff3333" BorderBrush="#778899" BorderThickness="1" Width="160" Height="50" CornerRadius="5">
					<Grid>
						<Label Content="{TemplateBinding Header}" FontWeight="Medium" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
					</Grid>
				</Border>
			</ControlTemplate>
		</Setter>
	</Style>
</Styles>
