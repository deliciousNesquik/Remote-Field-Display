<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:RFD.ViewModels"
        xmlns:controls="using:RFD.Controls"
        xmlns:converters="using:RFD.Converters"
        xmlns:usercontrols="using:RFD.UserControls"
        x:Class="RFD.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Background="{DynamicResource GradientBackground}"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaTitleBarHeightHint="-1"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="720">
	
	<Design.DataContext>
		<vm:MainWindowViewModel/>
	 </Design.DataContext>
	
	<Window.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary>
					<converters:BoolToBrushConverter x:Key="BoolToBrushConverter" />
				</ResourceDictionary>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Window.Resources>

	
	<Border Name="MainBorder" Margin="0 0 0 0" BorderThickness="1" BorderBrush="{DynamicResource BorderColor}">
		<Grid RowDefinitions="Auto, *">
			<!--Кастомная верхняя панель-->
			<Grid Grid.Row="0" ColumnDefinitions="*, Auto" Height="30" Background="{DynamicResource FocusingColor}">
				<!--Заголовок приложения-->
				<StackPanel Grid.Column="0" Orientation="Horizontal">
					<Image Source="{SvgImage ../Assets/app-icon.svg}"></Image>
					<Label VerticalAlignment="Center" Foreground="White" FontWeight="Medium" Margin="5 0 0 0">RFD "Пульт бурильщика"</Label>
				</StackPanel>
				
				<!--Кнопки для управления приложением-->
				<StackPanel Grid.Column="1" Orientation="Horizontal">
					<Button Name="WindowMinimizeButton" Classes="windowManipulation" Click="WindowMinimizeButton_OnClick">
						<Svg Path="../Assets/window-minimize.svg"/>
					</Button>
					<Button Name="WindowMaximizeButton" Classes="windowManipulation" Click="WindowMaximizeButton_OnClick">
						<Svg Path="../Assets/window-maximize.svg"/>
					</Button>
					<Button Name="WindowCloseButton" Classes="close" Click="WindowCloseButton_OnClick">
						<Svg Path="../Assets/window-close.svg"/>
					</Button>
				</StackPanel>
			</Grid>
			
			<Grid Grid.Row="1" RowDefinitions="*" ColumnDefinitions="*">
				<!--Затенение экрана при открытии различных модальных окон поверх главного-->
				<Border Name="BlackoutWindow"
				        IsVisible="{Binding IsModalWindowOpen}"
				        Background="#80000000"
				        ZIndex="1000"
				        HorizontalAlignment="Stretch"
				        VerticalAlignment="Stretch">
					
					<!--DataTemplate для всех модальных окон-->
					<ContentControl Content="{Binding CurrentUserControl}">
						<ContentControl.DataTemplates>
							<DataTemplate DataType="{x:Type usercontrols:AutomaticConnectingDialog}">
								<usercontrols:AutomaticConnectingDialog Background="{DynamicResource GradientBackground}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
							</DataTemplate>
							<DataTemplate DataType="{x:Type usercontrols:ManualConnectionDialog}">
								<usercontrols:ManualConnectionDialog Background="{DynamicResource GradientBackground}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
							</DataTemplate>
						</ContentControl.DataTemplates>
					</ContentControl>
				</Border>
				
				<!--Основное содержимое главного окна-->
				<Grid RowDefinitions="Auto, *" ColumnDefinitions="*, *">
					
					<!--Блюр экрана при открытии различных модальных окон поверх главного-->
					<Grid.Effect>
						<BlurEffect Radius="{Binding BlurRadius}"/>
					</Grid.Effect>
					
					<!--Блок меню-->
					<DockPanel Grid.Row="0" Grid.ColumnSpan="2">
						<Menu DockPanel.Dock="Left">
							<MenuItem Header="Подключение" Classes="main">
								<MenuItem Header="Автоматическое подключение" Classes="sub" Command="{Binding OpenAutomaticConnectingCommand}"/>
								<MenuItem Header="Ручное подключение" Classes="sub" Command="{Binding OpenManualConnectingCommand}"/>
								<MenuItem Header="Отключиться" Classes="sub" Command="{Binding DisconnectCommand}"/>
							</MenuItem>
							<MenuItem Header="Настройки" Classes="main" Command="{Binding SettingsCommand}">
							</MenuItem>
							<MenuItem Header="Окна" Classes="main">
								<MenuItem.Icon>
									<Image Width="15" Height="15" Source="{SvgImage ../Assets/window.svg}"></Image>
								</MenuItem.Icon>
								<MenuItem Header="Мишень" Classes="sub" Command="{Binding TargetVisibleCommand}"/>
								<MenuItem Header="Информация" Classes="sub" Command="{Binding InformationVisibleCommand}"/>
								<MenuItem Header="Параметры" Classes="sub" Command="{Binding ParametersVisibleCommand}"/>
								<MenuItem Header="Статусы" Classes="sub" Command="{Binding StatusesVisibleCommand}"/>
								<MenuItem Header="Состояния" Classes="sub" Command="{Binding ConditionsVisibleCommand}"/>
							</MenuItem>
							<MenuItem Header="Помощь" Classes="main">
								<MenuItem Header="Руководство пользователя" Command="{Binding UsersGuideCommand}" Classes="sub"/>
								<MenuItem Header="О приложении" Command="{Binding AboutApplicationCommand}" Classes="sub"/>
							</MenuItem>
						</Menu>
						
						<StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right" VerticalAlignment="Center">
							<Label Content="{Binding IpAddress, UpdateSourceTrigger=PropertyChanged, StringFormat={}IP (Адрес): {0}}" Foreground="{DynamicResource ForegroundColor02}" FontWeight="650" VerticalAlignment="Center"/>
							<Ellipse Fill="{Binding ConnectionStatus, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BoolToBrushConverter}}" Margin="0 0 10 0" Width="12" Height="12" VerticalAlignment="Center"/>
						</StackPanel>
					</DockPanel>
					<Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" BorderBrush="Gray" BorderThickness="0 0 0 1"/>
					
					
					<!--Левая панель с графиком и парметрами бурения-->
					<Grid Grid.Row="1" Grid.Column="0" Margin="20" RowDefinitions="*, Auto">
						<!--График бурения-->
						<StackPanel Orientation="Vertical" Grid.Row="0" Grid.Column="0" IsVisible="{Binding IsTargetDisplayed}"
						            PointerEntered="StackPanel_PointerEnter" PointerExited="StackPanel_PointerLeave" Background="Transparent">
							<Label Grid.Row="0" Content="Бурение:" Classes="section"/>
							<Label Grid.Row="0" Content="Нет данных" VerticalAlignment="Center" HorizontalAlignment="Center"/>
						</StackPanel>


						
						<!--Магнитное склонение-->
						<!--Смещение поверхности инструмента-->
						<StackPanel Grid.Row="1" IsVisible="{Binding IsParametersDisplayed}"
						            PointerEntered="StackPanel_PointerEnter" PointerExited="StackPanel_PointerLeave" Background="Transparent">
							<Label Content="Параметры бурения:" Classes="section"/>
							<Label Content="{Binding MagneticDeclination, StringFormat={}Магнитное склонение: {0:f2}}" />
							<Label Content="{Binding ToolfaceOffset, StringFormat={}Смещение поверхности инструмента: {0:f2}}" />
						</StackPanel>

					</Grid>
					<Grid Grid.Row="1" Grid.Column="1" RowDefinitions="Auto, Auto">
						<!--Блок с информационными блоками-->
						<StackPanel Grid.Row="0" Margin="0 20 0 0" IsVisible="{Binding IsInformationDisplayed}"
						            PointerEntered="StackPanel_PointerEnter" PointerExited="StackPanel_PointerLeave">
							<Label Content="Информация о бурении:" Classes="section"/>
							<ItemsControl ItemsSource="{Binding InfoBlockList}">
								<ItemsControl.ItemsPanel>
									<ItemsPanelTemplate>
										<WrapPanel Orientation="Horizontal"/>
									</ItemsPanelTemplate>
								</ItemsControl.ItemsPanel>
								<ItemsControl.ItemTemplate>
									<DataTemplate>
										<controls:InfoBox Margin="1" Title="{Binding Title}" Content="{Binding Content}" Inscription="{Binding Inscription}" />
									</DataTemplate>
								</ItemsControl.ItemTemplate>
							</ItemsControl>
						</StackPanel>
						
						<StackPanel Grid.Row="1" IsVisible="{Binding IsStatusesDisplayed}"
						            PointerEntered="StackPanel_PointerEnter" PointerExited="StackPanel_PointerLeave">
							<Label Content="Статусы бурения:" Classes="section" />
							<ItemsControl VerticalAlignment="Center" ItemsSource="{Binding InfoStatusList}">
								<ItemsControl.ItemsPanel>
									<ItemsPanelTemplate>
										<WrapPanel Orientation="Horizontal"/>
									</ItemsPanelTemplate>
								</ItemsControl.ItemsPanel>
								<ItemsControl.ItemTemplate>
									<DataTemplate>
										<controls:StatusBox Header="{Binding Header}" Status="{Binding Status}" Margin="1"/>
									</DataTemplate>
								</ItemsControl.ItemTemplate>
							</ItemsControl>
						</StackPanel>
					</Grid>
				</Grid>
			</Grid>
		</Grid>
	</Border>
</Window>
