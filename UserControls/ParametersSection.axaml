<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:RFD.ViewModels"
             mc:Ignorable="d" d:DesignWidth="450" d:DesignHeight="150"
             x:Class="RFD.UserControls.ParametersSection"
             x:DataType="vm:ParametersSectionViewModel">
	
	<Grid RowDefinitions="Auto, Auto, Auto" Margin="5">
		<Border Grid.Row="0" Grid.RowSpan="3" BorderBrush="Gray" BorderThickness="0"></Border>
		<!--Магнитное склонение и смещение поверхности инструмента-->
			<StackPanel Orientation="Horizontal">
				<Image Source="{SvgImage ../Assets/frame_expand.svg}" Width="13" Margin="0 0 5 0"/>
				<TextBlock Text="Параметры бурения" FontWeight="Bold" Classes="section" HorizontalAlignment="Left" VerticalAlignment="Center"/>
			</StackPanel>
			
			<Button Grid.Row="0" Width="20" Padding="0" Background="Transparent" HorizontalAlignment="Right"
			        Command="{Binding OpenInNewWindowCommand}" Content="{SvgImage ../Assets/external.svg}"/>
			
			<Label Grid.Row="1" Content="{Binding MagneticDeclination, StringFormat={}Магнитное склонение: {0:f2}}" />
			<Label Grid.Row="2" Content="{Binding ToolfaceOffset, StringFormat={}Смещение поверхности инструмента: {0:f2}}" />
	</Grid>
</UserControl>
