<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:RFD.ViewModels"
        xmlns:usercontrols="using:RFD.UserControls"
        xmlns:converters="using:RFD.Converters"
        mc:Ignorable="d" d:DesignWidth="1100" d:DesignHeight="820"
        x:Class="RFD.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Background="{DynamicResource GradientBackground}"
        
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaTitleBarHeightHint="-1">
	
	<Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
	
	<Window.Resources>
		<converters:BoolToBrushConverter x:Key="BoolToBrushConverter"/>
	</Window.Resources>
	
	
	<Border Name="MainBorder" 
	        BorderThickness="1" 
	        BorderBrush="{DynamicResource BorderColor}">
		
		<Grid RowDefinitions="Auto, *">
			<!--Кастомная верхняя панель-->
			
			
			<Grid Name="TopBar" Grid.Row="0" ColumnDefinitions="*, Auto" Height="28">
				<Grid.Background>
					<LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
						<GradientStop Color="#3E66AD" Offset="0"/>
						<GradientStop Color="#34589C" Offset="1"/>
					</LinearGradientBrush>
				</Grid.Background>
				
				<!--Заголовок приложения и картинка-->
				<StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
					<Image Source="{SvgImage ../Assets/app-icon.svg}" Margin="5 2 0 2"></Image>
					<Label VerticalAlignment="Center" Foreground="White" FontWeight="Medium" Margin="3 0 0 0">Remote Field Display</Label>
				</StackPanel>
				
				<!--Кнопки для управления приложением-->
				<StackPanel Grid.Column="1" Orientation="Horizontal">
					<Button Classes="windowManipulation" Click="WindowMinimizeButton_OnClick">
						<Svg Path="../Assets/button-minimize.svg"/>
					</Button>
					<Button Classes="windowManipulation" Click="WindowMaximizeButton_OnClick">
						<Svg Path="../Assets/button-maximize.svg"/>
					</Button>
					<Button Classes="windowСlose" Click="WindowCloseButton_OnClick">
						<Svg Path="../Assets/button-close.svg"/>
					</Button>
				</StackPanel>
			</Grid>
			
			<Grid Grid.Row="1">
				<!--Затенение экрана при открытии различных модальных окон поверх главного-->
				<Border Name="BlackoutWindow"
				        IsVisible="{Binding IsModalWindowOpen}"
				        Background="#80000000"
				        ZIndex="1000"
				        HorizontalAlignment="Stretch"
				        VerticalAlignment="Stretch">
					
					<!--DataTemplate для всех модальных окон-->
					<ContentControl Content="{Binding CurrentUserControl}">
						<ContentControl.DataTemplates>
							<DataTemplate DataType="{x:Type usercontrols:AutomaticConnectingDialog}">
								<usercontrols:AutomaticConnectingDialog Background="{DynamicResource GradientBackground}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
							</DataTemplate>
							<DataTemplate DataType="{x:Type usercontrols:ManualConnectionDialog}">
								<usercontrols:ManualConnectionDialog Background="{DynamicResource GradientBackground}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
							</DataTemplate>
							
							<DataTemplate DataType="{x:Type usercontrols:AboutDialog}">
								<usercontrols:AboutDialog Background="{DynamicResource GradientBackground}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
							</DataTemplate>
						</ContentControl.DataTemplates>
					</ContentControl>
				</Border>
				
				<!--Основное содержимое главного окна-->
				<Grid RowDefinitions="Auto, *" ColumnDefinitions="*, *">
					<Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" BorderBrush="Gray" BorderThickness="0 0 0 0.5"/>
					
					<!--Блюр экрана при открытии различных модальных окон поверх главного-->
					<Grid.Effect>
						<BlurEffect Radius="{Binding BlurRadius}"/>
					</Grid.Effect>
					
					<!--Блок меню-->
					<DockPanel Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Height="28">
						<Menu DockPanel.Dock="Left" Height="27">
							<MenuItem Classes="main">
								<MenuItem.Header>
									<StackPanel Orientation="Horizontal">
										<Image Source="{SvgImage ../Assets/internet-connection.svg}" Width="15" Margin="0 0 5 0"/>
										<TextBlock Text="Подключение"></TextBlock>
									</StackPanel>
								</MenuItem.Header>
								
								<MenuItem Header="Автоматическое подключение" Classes="sub" Command="{Binding OpenAutomaticConnectingCommand}"/>
								<MenuItem Header="Ручное подключение" Classes="sub" Command="{Binding OpenManualConnectingCommand}"/>
								<MenuItem Header="Отключиться" Classes="sub" Command="{Binding DisconnectCommand}"/>
							</MenuItem>
							<MenuItem Classes="main" Command="{Binding SettingsCommand}">
								<MenuItem.Header>
									<StackPanel Orientation="Horizontal">
										<Image Source="{SvgImage ../Assets/settings.svg}" Width="17" Margin="0 0 5 0"/>
										<TextBlock Text="Настройки"/>
									</StackPanel>
								</MenuItem.Header>
							</MenuItem>
							<MenuItem Classes="main">
								<MenuItem.Header>
									<StackPanel Orientation="Horizontal">
										<Image Source="{SvgImage ../Assets/help.svg}" Width="16" Margin="0 0 5 0"/>
										<TextBlock Text="Помощь"></TextBlock>
									</StackPanel>
								</MenuItem.Header>
								
								<MenuItem Header="Руководство пользователя" Classes="sub">
								</MenuItem>
								<MenuItem Header="О приложении" Command="{Binding AboutCommand}" Classes="sub"/>
							</MenuItem>
						</Menu>
						
						<StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right" VerticalAlignment="Center">
							<StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0 0 15 0">
								<Grid Margin="0 0 0 0">
									<Ellipse ToolTip.Tip="Данный элемент отвечает за статус подключения к серверу" Fill="{Binding ConnectionStatus, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BoolToBrushConverter}}" Width="6" Height="6" VerticalAlignment="Center"/>
									<Image Source="{SvgImage ../Assets/connection-status.svg}" Width="20" Height="20" VerticalAlignment="Center" ToolTip.Tip="Данный элемент отвечает за статус подключения к серверу"/>
								</Grid>
								<Label Content="{Binding IpAddress, UpdateSourceTrigger=PropertyChanged}" 
								       Foreground="{DynamicResource ForegroundColor02}" 
								       ToolTip.Tip="Данное поле отвечает за отображение IP-адреса сервера от которого принимаются данные"
								       FontWeight="650" VerticalAlignment="Center"/>
							</StackPanel>
						</StackPanel>
					</DockPanel>
					
					<Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
					      ColumnDefinitions="0.5*,0.5*" RowDefinitions="0.8*,0.2*" Margin="10">
						
						<ContentControl Grid.Row="0" Grid.Column="0" IsVisible="{Binding IsFirstCellVisible}"
						                VerticalAlignment="Stretch" Margin="0 0 5 5"
						                Content="{Binding FirstCell}"/>
						<ContentControl Grid.Row="1" Grid.Column="0" IsVisible="{Binding IsSecondCellVisible}"
						                VerticalAlignment="Stretch" Margin="0 5 5 0"
						                Content="{Binding SecondCell}"/>
						
						
						<Grid Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" RowDefinitions="0.8*, 0.2*">
							<ContentControl Grid.Row="0" Grid.Column="0" IsVisible="{Binding IsThirdCellVisible}"
							                VerticalAlignment="Stretch" Margin="5 0 0 5"
							                Content="{Binding ThirdCell}"/>
						
							<ContentControl Grid.Row="1" Grid.Column="0" IsVisible="{Binding IsFourCellVisible}"
							                VerticalAlignment="Stretch" Margin="5 5 0 0"
							                Content="{Binding FourCell}"/>
						</Grid>
						
					</Grid>
				</Grid>
			</Grid>
		</Grid>
	</Border>
</Window>
