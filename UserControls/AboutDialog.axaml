<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="420" d:DesignHeight="280"
             xmlns:vm="using:RFD.ViewModels"
             x:Class="RFD.UserControls.AboutDialog"
             x:DataType="vm:AboutViewModel">
    
    <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" 
                                                                              Background="{DynamicResource Background}" Padding="15" 
                                                                              Width="{DynamicResource FrameWidth}" Height="{DynamicResource FrameHeight}">
        
        <Grid>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,0,0,10">
                <Svg Name="HelpImage" Path="../Assets/help-Light.svg" Width="{DynamicResource FrameIconSize}" Height="{DynamicResource FrameIconSize}" Margin="0 0 5 0"/>
                <TextBlock Text="О приложении"  FontSize="{DynamicResource FrameFontSizeBig}"  FontWeight="Bold" TextAlignment="Center" />
            </StackPanel>
            
            <TextBlock Text="{DynamicResource Version}" FontSize="10" TextAlignment="Center" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,0,0"/>
            
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock TextWrapping="Wrap" FontSize="{DynamicResource FrameFontSizeSmall}" TextAlignment="Start">
                    <Run FontWeight="550">Remote Field Display (RFD)</Run> — приложение для мониторинга и управления буровым комплексом. Позволяет отслеживать параметры бурения, контролировать оборудование и анализировать данные в реальном времени.
                </TextBlock>

            </StackPanel>
            
            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right">
                <Button Height="35" HorizontalAlignment="Right" Command="{Binding CloseCommand}">
                    <TextBlock Text="Проверить обновления" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Button>
                <Button Height="35" HorizontalAlignment="Right" Command="{Binding CloseCommand}">
                    <TextBlock Text="Закрыть" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
    
</UserControl>
