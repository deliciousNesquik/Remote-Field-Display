<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="RFD.App"
             xmlns:local="using:RFD"
             RequestedThemeVariant="Default">

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <Style Selector="Button.windowManipulation">
            <Setter Property="CornerRadius" Value="0"/>
            <Setter Property="Width" Value="45"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style Selector="Button.close /template/ContentPresenter">
            <Setter Property="CornerRadius" Value="0"/>
            <Setter Property="Width" Value="45"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="Transparent"/>
            <Style Selector="^:pointerover">
                <Setter Property="Background" Value="{DynamicResource RedColor}"></Setter>
            </Style>
        </Style>
        <Style Selector="Label.section">
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Margin" Value="0,0,0,10" />
        </Style>
        <Style Selector="MenuItem.main">
            <Setter Property="Foreground" Value="{DynamicResource ForegroundColor02}"/>
            <Setter Property="FontWeight" Value="650"/>
        </Style>
        <Style Selector="MenuItem.sub">
            <Setter Property="Foreground" Value="{DynamicResource ForegroundColor02}"/>
            <Setter Property="FontWeight" Value="500"/>
        </Style>
        
        <FluentTheme/>
        <StyleInclude Source="avares://RFD/Controls/InfoBox.axaml"/>
        <StyleInclude Source="avares://RFD/Controls/StatusBox.axaml"/>
        
        
    </Application.Styles>
             
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="avares://RFD/UserControls/LoadingIndicators.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        
        <Color x:Key="BackgroundColor01">#858a86</Color>
        <Color x:Key="BackgroundColor02">#a6aab9</Color>
        <Color x:Key="BackgroundColor03">#ededed</Color>
        <Color x:Key="ForegroundColor01">#101010</Color>
        <Color x:Key="ForegroundColor02">#1B2046</Color>
        <Color x:Key="BorderColor">#778899</Color>
        <Color x:Key="FocusingColor">#3e66ad</Color>
        <Color x:Key="CoverFocusingColor">#2d4a7d</Color>
        <Color x:Key="RedColor">#ff3333</Color>
        <Color x:Key="GreenColor">#00b300</Color>
        
        
        <LinearGradientBrush x:Key="GradientBackground" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="{StaticResource BackgroundColor01}" Offset="0" />
            <GradientStop Color="{StaticResource BackgroundColor02}" Offset="1" />
            <GradientStop Color="{StaticResource BackgroundColor03}" Offset="2" />
        </LinearGradientBrush>
    </Application.Resources>
</Application>