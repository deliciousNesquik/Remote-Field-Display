<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:RFD.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="RFD.UserControls.ManualConnectionDialog"
             x:DataType="vm:ManualConnectionDialogViewModel">
   
    <Design.DataContext>
        <vm:ManualConnectionDialogViewModel/>
    </Design.DataContext>
    
    <Border Background="White" Padding="20">
        <StackPanel>
            <TextBlock Text="Ручное подключение" FontSize="16" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,10"/>
            
            <!-- Пример полей для ввода -->
            <StackPanel Margin="0,10,0,10">
                <TextBox Watermark="Введите IP-адрес" Margin="0,5,0,5"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
                <Button Content="ОК" Command="{Binding ConfirmCommand}" Width="80"/>
                <Button Content="Отмена" Command="{Binding CancelCommand}" Width="80"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
