<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:interfaces="clr-namespace:RFD.Interfaces"
             x:Class="RFD.App"
             
             RequestedThemeVariant="LightTheme">

    <Application.DataTemplates>
        <interfaces:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <!--Стиль для обычной кнопки-->
        <Style Selector="Button">
            <Setter Property="Foreground" Value="{DynamicResource ForegroundColor03}"></Setter>
            <Setter Property="Background" Value="{DynamicResource FocusingColor}"></Setter>
        </Style>
        
        <!--Стиль для кнопок управления окном (Свернуть, развернуть на весь экран)-->
        <Style Selector="Button.windowManipulation">
            <Setter Property="CornerRadius" Value="0"/>
            <Setter Property="Width" Value="{DynamicResource ButtonWidth}"/>
            <Setter Property="Height" Value="{DynamicResource ButtonHeight}"/>
            <Setter Property="Background" Value="{DynamicResource ButtonBackground}"/>
        </Style>
        
        <!--Стиль для кнопки закрытия окна-->
        <Style Selector="Button.windowСlose /template/ContentPresenter">
            <Setter Property="CornerRadius" Value="0"/>
            <Setter Property="Width" Value="{DynamicResource ButtonWidth}"/>
            <Setter Property="Height" Value="{DynamicResource ButtonHeight}"/>
            <Setter Property="Background" Value="{DynamicResource ButtonBackground}"/>
            <Style Selector="^:pointerover">
                <Setter Property="Background" Value="{DynamicResource RedColor}"></Setter>
            </Style>
        </Style>
        
        
        <!--Стиль для заголовков блоков с какой-либо информацией-->
        <Style Selector="Label.section">
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Margin" Value="0,0,0,10" />
        </Style>
        
        <!--Стиль для верхнего элемента меню-->
        <Style Selector="MenuItem.main">
            <Setter Property="Foreground" Value="{DynamicResource ForegroundColor02}"/>
            <Setter Property="FontWeight" Value="650"/>
        </Style>
        
        <!--Стиль для нижнего элемента меню-->
        <Style Selector="MenuItem.sub">
            <Setter Property="Foreground" Value="{DynamicResource ForegroundColor02}"/>
            <Setter Property="FontWeight" Value="500"/>
        </Style>

        
        <!-- По умолчанию загружаем светлую тему -->
        <StyleInclude Source="avares://RFD/Controls/InfoBox.axaml"/>
        <StyleInclude Source="avares://RFD/Controls/StatusBox.axaml"/>
    </Application.Styles>
             
    <Application.Resources>
        
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="avares://RFD/Themes/Light.axaml"/>
                <ResourceInclude Source="avares://RFD/Themes/Dark.axaml"/>
                
                <ResourceInclude Source="avares://RFD/Controls/LoadingIndicators.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        
        <!--Общие стили-->
        <Color x:Key="BackgroundColor01">#858a86</Color>
        <Color x:Key="BackgroundColor02">#a6aab9</Color>
        <Color x:Key="BackgroundColor03">#ededed</Color>
        <Color x:Key="ForegroundColor01">#101010</Color>
        <Color x:Key="ForegroundColor02">#1B2046</Color>
        <Color x:Key="ForegroundColor03">#ededed</Color>
        <Color x:Key="BorderColor">#778899</Color>
        <Color x:Key="FocusingColor">#3e66ad</Color>
        <Color x:Key="CoverFocusingColor">#2d4a7d</Color>
        <Color x:Key="RedColor">#ff3333</Color>
        <Color x:Key="GreenColor">#00b300</Color>
        <Color x:Key="HighlightBackground">#FFEEEEEE</Color>
        <Color x:Key="PressedBackground">#FD6D6D6E</Color>
        
        <Color x:Key="ButtonBackground">Transparent</Color>
        
        <x:Double x:Key="ButtonWidth">45</x:Double>
        <x:Double x:Key="ButtonHeight">30</x:Double>
        
        
        <!--Стили для модульных окон-->
        <x:Double x:Key="FrameWidth">420</x:Double>
        <x:Double x:Key="FrameHeight">270</x:Double>
        <x:Double x:Key="FrameIconSize">18</x:Double>
        <x:Double x:Key="FrameFontSizeBig">16</x:Double>
        <x:Double x:Key="FrameFontSizeSmall">12</x:Double>
        
        <x:String x:Key="Version">Версия 1.0.0</x:String>
    </Application.Resources>
</Application>