<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:RFD.ViewModels"
             xmlns:converters="clr-namespace:RFD.Converters"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="RFD.UserControls.ConnectStatus"
             x:DataType="vm:ConnectStatusViewModel">
    
    <UserControl.Resources>
        <converters:BoolToBrushConverter x:Key="BoolToBrushConverter" />
    </UserControl.Resources>
    
    <Design.DataContext>
        <vm:ConnectStatusViewModel />
    </Design.DataContext>
    
    <Viewbox Stretch="Uniform">
        <Grid RowDefinitions="Auto" ColumnDefinitions="Auto" Margin="5">
        
            <Border BorderBrush="{Binding Status, Converter={StaticResource BoolToBrushConverter}}" 
                    BorderThickness="1" Padding="9" CornerRadius="10"/>
        
            <Border Background="{Binding Status, Converter={StaticResource BoolToBrushConverter}}"
                    CornerRadius="10" Opacity="0.15"/>
        
            <Ellipse Margin="2 0 0 0" HorizontalAlignment="Left" Width="15" Height="15" Fill="{Binding Status, Converter={StaticResource BoolToBrushConverter}}"/>  
            <Ellipse Margin="2 0 0 0" HorizontalAlignment="Left" Width="15" Height="15" Fill="Transparent" StrokeThickness="0.5" Stroke="#575757"/>  
        
            <!-- Текст адреса -->
            <TextBlock Text="{Binding Address}" 
                       FontWeight="SemiBold"
                       FontSize="14"
                       Margin="20 0 5 0"
                       VerticalAlignment="Center"
                       Foreground="{DynamicResource TextGradient}">
                <TextBlock.Effect>
                    <DropShadowEffect BlurRadius="2" Color="{DynamicResource Background}" Opacity="0.5" OffsetX="0.5" OffsetY="0.5"/>
                </TextBlock.Effect>
            </TextBlock>
        </Grid>
    </Viewbox>
    
    
</UserControl>